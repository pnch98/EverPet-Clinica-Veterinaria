@model IEnumerable<Sanitario.Models.AnimaleSmarrito>

@{
    ViewData["Title"] = "Index";
}
<div>
    <div class="d-flex justify-content-between align-items-baseline">
        <h1>Ricovero</h1>

        <p class="text-center">
            <a class="btn btn-transparent " asp-action="Create"><i class="bi bi-plus-circle fs-3 primaryText"></i></a>
        </p>
    </div>
    <div class="blurredWhite rounded p-2 shadow" style="max-height: 450px; overflow-y: auto">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Tipologia)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataRegistrazione)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataNascita)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ColoreMantello)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CodiceFiscaleProprietario)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Microchip)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataInizioRicovero)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Foto)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tipologia)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataRegistrazione)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataNascita)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ColoreMantello)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CodiceFiscaleProprietario)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Microchip)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataInizioRicovero)
                        </td>
                        <td>
                            <img src="/imgs/@item.Foto" width="150" />
                        </td>
                        <td class="text-end">
                            <div class="d-flex">

                                <a class="btn btn-transparent" asp-action="Edit" asp-route-id="@item.IdAnimaleSmarrito"><i class="bi bi-pencil fs-5 text-success"></i></a>
                                <a class="btn btn-transparent" asp-action="Delete" asp-route-id="@item.IdAnimaleSmarrito"><i class="bi bi-trash fs-5 text-danger"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>