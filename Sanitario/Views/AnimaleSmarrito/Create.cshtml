@model Sanitario.Models.AnimaleSmarrito

@{
    ViewData["Title"] = "Create";
}

<div class="d-flex justify-content-center">
    <div class="blurredWhite rounded p-2 shadow">
        <h1>Registra un animale smarrito</h1>

        <div>
            <form method="post" enctype="multipart/form-data" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="d-flex justify-content-between mb-3">
                    <div class="form-group me-2">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group me-2">
                        <label asp-for="Tipologia" class="control-label"></label>
                        <input asp-for="Tipologia" class="form-control" />
                        <span asp-validation-for="Tipologia" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DataNascita" class="control-label"></label>
                        <input type="date" asp-for="DataNascita" class="form-control" />
                        <span asp-validation-for="DataNascita" class="text-danger"></span>
                    </div>
                </div>
                <div class="d-flex justify-content-between mb-3">
                    <div class="form-group me-2">
                        <label asp-for="ColoreMantello" class="control-label"></label>
                        <input asp-for="ColoreMantello" class="form-control" />
                        <span asp-validation-for="ColoreMantello" class="text-danger"></span>
                    </div>
                    <div class="form-group me-2">
                        <label asp-for="CodiceFiscaleProprietario" class="control-label"></label>
                        <input asp-for="CodiceFiscaleProprietario" class="form-control" />
                        <span asp-validation-for="CodiceFiscaleProprietario" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Microchip" class="control-label"></label>
                        <input asp-for="Microchip" class="form-control" />
                        <span asp-validation-for="Microchip" class="text-danger"></span>
                    </div>
                </div>
                <div class="d-flex flex-column align-items-center">
                    <div class="form-group mb-2">
                        <label asp-for="Foto" class="control-label"></label>
                        <input asp-for="Foto" type="file" name="Foto" class="form-control" />
                        <span asp-validation-for="Foto" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                    <div>
                        <a asp-action="Index">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
