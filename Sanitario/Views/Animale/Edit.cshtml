@model Sanitario.Models.Animale

@{
    ViewData["Title"] = "Edit";
}

<div class="d-flex justify-content-center">
    <div class="d-flex justify-content-center blurredWhite rounded p-2 shadow">
        <div class="d-flex flex-column align-items-center">
            <h1>Modifica Animale</h1>
            <div class="d-flex">
                <form asp-action="Edit" class="me-5">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="IdAnimale" />
                    <div class="form-group mb-2">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Tipologia" class="control-label"></label>
                        <input asp-for="Tipologia" class="form-control" />
                        <span asp-validation-for="Tipologia" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="DataRegistrazione" class="control-label"></label>
                        <input asp-for="DataRegistrazione" class="form-control" />
                        <span asp-validation-for="DataRegistrazione" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="DataNascita" class="control-label"></label>
                        <input asp-for="DataNascita" class="form-control" />
                        <span asp-validation-for="DataNascita" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="ColoreMantello" class="control-label"></label>
                        <input asp-for="ColoreMantello" class="form-control" />
                        <span asp-validation-for="ColoreMantello" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Microchip" class="control-label"></label>
                        <input asp-for="Microchip" class="form-control" />
                        <span asp-validation-for="Microchip" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                    <div>
                        <a asp-action="Index" class="text-black shadow">Visualizza la lista completa degli animali</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
