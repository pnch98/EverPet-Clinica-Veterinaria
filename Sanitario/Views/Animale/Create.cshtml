@model Sanitario.Models.Animale

@{
    ViewData["Title"] = "Create";
}
<div class="d-flex justify-content-center">
    <div class="blurredWhite rounded p-2 shadow">
        <h1>Registra un animale</h1>

        <div>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <h4>Proprietario</h4>
                    <div class="d-flex">
                        <div class="form-group me-3">
                            <label asp-for="Cliente.Nome" class="control-label"></label>
                            <input asp-for="Cliente.Nome" class="form-control" />
                            <span asp-validation-for="Cliente.Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group me-3">
                            <label asp-for="Cliente.Cognome" class="control-label"></label>
                            <input asp-for="Cliente.Cognome" class="form-control" />
                            <span asp-validation-for="Cliente.Cognome" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Cliente.CodiceFiscale" class="control-label"></label>
                            <input asp-for="Cliente.CodiceFiscale" class="form-control" />
                            <span asp-validation-for="Cliente.CodiceFiscale" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <hr />
                <div>
                    <h4>Animale</h4>
                    <div class="d-flex mb-2">
                        <div class="form-group me-3">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group me-3">
                            <label asp-for="Tipologia" class="control-label"></label>
                            <input asp-for="Tipologia" class="form-control" />
                            <span asp-validation-for="Tipologia" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DataNascita" class="control-label"></label>
                            <input type="date" asp-for="DataNascita" class="form-control" />
                            <span asp-validation-for="DataNascita" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="d-flex mb-3">
                        <div class="form-group me-3">
                            <label asp-for="ColoreMantello" class="control-label"></label>
                            <input asp-for="ColoreMantello" class="form-control" />
                            <span asp-validation-for="ColoreMantello" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Microchip" class="control-label"></label>
                            <input asp-for="Microchip" class="form-control" />
                            <span asp-validation-for="Microchip" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group d-flex flex-column align-items-center">
                        <input type="submit" value="Create" class="btn animalePrimaryBtn mb-2 w-50" />
                        <div>
                            <a class="animaleSecondaryLink" asp-action="Index">Back to List</a>
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
