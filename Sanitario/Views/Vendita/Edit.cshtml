@model Sanitario.Models.Vendita

@{
    ViewData["Title"] = "Edit";
}

<div class="d-flex justify-content-center">
    <div class="d-flex justify-content-center blurredWhite rounded p-2 shadow">
        <div class="d-flex flex-column align-items-center">

        <h1>Modifica Vendita</h1>
        <div class="d-flex">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="IdVendita" />
                    <div class="form-group mb-2">
                        <label asp-for="IdCliente" class="control-label"></label>
                        <select asp-for="IdCliente" class="form-control" asp-items="ViewBag.IdCliente"></select>
                        <span asp-validation-for="IdCliente" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="DataVendita" class="control-label"></label>
                        <input asp-for="DataVendita" class="form-control" />
                        <span asp-validation-for="DataVendita" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="PrezzoTotale" class="control-label"></label>
                        <input asp-for="PrezzoTotale" class="form-control" />
                        <span asp-validation-for="PrezzoTotale" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <input type="submit" value="Conferma" class="btn btn-primary" />
                    </div>
                    <div>
                        <a asp-action="Index" class="text-black shadow">Visualizza la lista completa delle vendite</a>
                    </div>
                </form>
        </div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
