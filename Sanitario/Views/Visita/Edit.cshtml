@model Sanitario.Models.Visita

@{
    ViewData["Title"] = "Edit";
}

<div class="d-flex justify-content-center">
    <div class="d-flex justify-content-center blurredWhite rounded p-2 shadow">
        <div class="d-flex flex-column align-items-center">
            <h1>Modifica Visita</h1>
            <div class="d-flex">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group mb-2">
                        <label asp-for="IdAnimale" class="control-label"></label>
                        <select disabled asp-for="IdAnimale" class="form-control" asp-items="ViewBag.IdAnimale"></select>
                        <span asp-validation-for="IdAnimale" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="DataVisita" class="control-label"></label>
                        <input asp-for="DataVisita" class="form-control" />
                        <span asp-validation-for="DataVisita" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Esame" class="control-label"></label>
                        <input asp-for="Esame" class="form-control" />
                        <span asp-validation-for="Esame" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <input type="submit" value="Conferma" class="btn btn-primary" />
                    </div>
                    <div>
                        <a asp-action="Index" class="text-black shadow">Visualizza la lista completa delle visite</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
