@model IEnumerable<Sanitario.Models.Visita>

@{
    ViewData["Title"] = "Index";
}

<div class="w-75">
    <div class="d-flex justify-content-between align-items-baseline">
        <h1>Visite</h1>

        <p class="text-center">
            <a class="btn btn-transparent " asp-action="Create"><i class="bi bi-plus-circle fs-3 primaryText"></i></a>
        </p>
    </div>
    <div class="blurredWhite rounded p-2 shadow" style="max-height: 450px; overflow-y: auto">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DataVisita)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Esame)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Animale)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataVisita)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Esame)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Animale.NomeCompleto)
                        </td>
                        <td class="text-end">
                            <div class="d-flex">

                                <a class="btn btn-transparent" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil fs-5 text-success"></i></a>
                                <a class="btn btn-transparent" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash fs-5 text-danger"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

