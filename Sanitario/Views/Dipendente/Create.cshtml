@model Sanitario.Models.Dipendente

@{
    ViewData["Title"] = "Create";
}

<div class="d-flex justify-content-center">
    <div class="d-flex justify-content-center blurredWhite rounded p-2 shadow">
        <div class="d-flex flex-column align-items-center">
            <h1 class="mb-4">Inserisci Dipendente</h1>
            <div class="d-flex">
                <form asp-action="Create" class="me-5">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-2">
                        <label asp-for="Username" class="control-label"></label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Ruolo" class="control-label"></label>
                        <select asp-for="Ruolo" class="form-control" >
                            <option value="Veterinario">Veterinario</option>
                            <option value="Farmacista">Farmacista</option>
                        </select>
                        <span asp-validation-for="Ruolo" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
